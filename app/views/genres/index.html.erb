<div class="container">
<div class="row">
  <p id="notice"><%= notice %></p>
</div>

<div class="row">
  <h1>Listing Genres</h1>
</div>

<div class="row">
<div class="jumbotron col-sm-10 col-sm-offset-1">
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>

<div class="row">
  <%= link_to 'New Movie', new_genre_path %>
</div>
</div>
