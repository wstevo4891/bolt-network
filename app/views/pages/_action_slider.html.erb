<div class="row">
  <div class="col-xs-12">
    <% @movies.each do |movie| %>
      <div class="poster">
        <%= image_tag(movie.photo, class: "img-responsive") %>
      </div>
    <% end %>
  </div>
</div>

<div class="slider-action">
  <span class="glyphicon glyphicon-menu-left slider-arrow">
    <p class="sr-only">Go to previous slide</p>
  </span>

  <span class="glyphicon glyphicon-menu-right slider-arrow">
    <p class="sr-only">Go to next slide</p>
  </span>

  <div id="slide-info">
    <img src="pirates-logo.png" class="img-responsive" id="movie-logo"/> 

    <div id="movie-content">
      <span id="year">2003</span>
      <span id="rating">PG-13</span>
      <span id="movie-length">2h 23min</span>

      <p id="blurb">
        A sword-handy blacksmith teams up with a clever yet eccentric outlaw to rescue his love from a crew of undead pirates.
      </p>
      
      <div id="slide-buttons">
        <a href="/movies/1" class="btn-blue" id="play"><i class="fa fa-play"></i>PLAY</a>
        <a href="#" class="btn-clear"><i class="fa fa-plus"></i>MY LIST</a>
      </div>
    </div>
  </div>
</div>









