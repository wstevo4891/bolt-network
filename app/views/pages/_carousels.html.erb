<% @genres.each do |genre| %>
  <div class="row carousel-row">
    <% if genre.name == "Action" %>
      <h3>
        <a href=<%= genre_path(genre) %>>Action & Adventure<i class="glyphicon glyphicon-chevron-right"></i></a>
      </h3>
    <% else %>
      <h3>
        <a href=<%= genre_path(genre) %>><%= genre.name %><i class="glyphicon glyphicon-chevron-right"></i></a>
      </h3>
    <% end %>
    <div class="slider-<%= genre.name %>">
      <div class="border-left"></div>
      <div class="border-right"></div>
      <ul>
        <% arr = [] %>
        <% movie_ids = [] %>
        <% carousel_data(@movies, genre, arr, movie_ids) %>
        <% i = 0 %>
        <% index = 1 %>
        <% while arr[i] %>
          <% count = 0 %>
          <li id="auto-width">
          <% while count < 5 %>
            <% @movie = Movie.find_by(id: movie_ids[i]) %>
            <% if i < arr.length - 1 %>
              <div class="poster poster-<%= index %>">
                <%= link_to image_tag(arr[i], class: "img-responsive"), movie_path(@movie) %>
              </div>
              <% i += 1 %>
              <% index += 1 %>
              <% count += 1 %>
            <% elsif i == arr.length - 1 %>
              <div class="poster poster-<%= index %>">
                <%= link_to image_tag(arr[i], class: "img-responsive"), movie_path(@movie) %>
              </div>
              <% i += 1 %>
              <% break %>
            <% end %>
          <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
