<% if @movie.blank? %>
  <br>
  <div class="search-row text-center">
    <h1>Title not found</h1>
  </div>
<% else %>
  <br>
  <div class="search-row">
    <div class="search-img col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
      <%= link_to image_tag(@movie.photo), movie_path(@movie), class: "img-responsive" %>
      <h2><%= @movie.title %></h2>
    </div>
  </div>
<% end %>
