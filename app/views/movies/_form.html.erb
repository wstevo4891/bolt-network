<%= form_for(@movie) do |f| %>
  
<div class="row">
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="row">
<div class="jumbotron-index col-sm-10 col-sm-offset-1">

  <div class="row">
    <div class="form-group col-sm-8 col-sm-offset-2">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group col-sm-4 col-sm-offset-2">
      <%= f.label :genre_ids, "Genres" %><br>
      <%= f.select :genre_ids, options_for_select(@genres.collect { |genre| genre.name }), {multiple: true, size: 3} %>
    </div> 

    <div class="form-group col-sm-6">
      <%= f.label :photo %>
      <%= f.file_field(:photo) %>
    </div>

    <div class="form-group col-sm-8 col-sm-offset-2">
      <%= f.label :summary %><br>
      <%= f.text_area :summary, class: "form-control" %>
    </div>

    <div class="form-group col-sm-8 col-sm-offset-2">
      <%= f.label :rating %><br>
      <%= f.text_field :rating, class: "form-control" %>
    </div>
  </div>

  <br>
  <div class="row actions text-center">
    <%= f.submit "Save", class: "btn btn-lg btn-primary" %>
  </div>
</div>
</div>
<% end %>
