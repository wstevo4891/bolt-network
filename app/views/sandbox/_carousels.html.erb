<% @genres.each do |genre| %>
  <div class="row carousel-row">
    <h3>
      <a href=<%= genre_path(genre) %>>
        <%= genre.name %>
        <i class="fa fa-chevron-right"></i>
      </a>
    </h3>
    <div class="slider-<%= genre.name %>">
      <div class="border-left"></div>
      <div class="border-right"></div>
      <ul>
        <% genre.movie_ids.each_slice(@batch.to_i) do |batch| %>
          <li class="max-92">
            <% batch.each do |movie_id| %>
              <% @movie = genre.movies_hash[movie_id] %>
              <div class="poster">
                <div class="poster-inner">
                  <%#= link_to image_tag(@movie.photo), movie_path(@movie) %>
                  <%= link_to "", movie_path(@movie) do %>
                    <div class="poster-image" style="background-image: <%= @movie.photo %>"></div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
